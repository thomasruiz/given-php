#!/usr/bin/env php
<?php
define('GIVENPHP_VERSION', '1.0-dev');

// Look for project dependencies.
if (is_file($autoload = getcwd() . '/vendor/autoload.php')) {
    require $autoload;
} elseif (is_file($autoload = getcwd() . '/../../autoload.php')) {
    require $autoload;
}

// Look for GivenPHP dependencies.
if (is_file($autoload = __DIR__ . '/../vendor/autoload.php')) {
    require($autoload);
} elseif (is_file($autoload = __DIR__ . '/../../../autoload.php')) {
    require($autoload);
} else {
    throw new Exception('You need composer to use GivenPHP.');
}

$app = new GivenPHP\Console\Application(GIVENPHP_VERSION);
$app->run();
